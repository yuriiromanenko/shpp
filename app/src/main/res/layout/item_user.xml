<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/photoImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        tools:src="@drawable/ic_user_avatar"
        android:layout_marginStart="@dimen/padding"
        android:layout_marginTop="@dimen/padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/deleteButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:src="@drawable/ic_delete"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginEnd="@dimen/padding"
        android:layout_marginTop="@dimen/padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    
    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_22dp"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/padding"
        android:lines="1"
        android:ellipsize="end"
        android:text="Yurii Romanenko"
        app:layout_constraintTop_toTopOf="@id/photoImageView"
        app:layout_constraintStart_toEndOf="@id/photoImageView"
        app:layout_constraintEnd_toStartOf="@id/deleteButton"
        />

    <TextView
        android:id="@+id/userCompanyTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/gray"
        android:layout_marginStart="@dimen/padding"
        android:layout_marginEnd="@dimen/padding"
        android:lines="1"
        android:ellipsize="end"
        android:text="Android Developer"
        app:layout_constraintTop_toBottomOf="@id/userNameTextView"
        app:layout_constraintStart_toEndOf="@id/photoImageView"
        app:layout_constraintEnd_toStartOf="@id/deleteButton"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrierMyContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="photoImageView, userCompanyTextView"
        app:barrierDirection="bottom"
        />
<Space
    android:layout_width="wrap_content"
    android:layout_height="6dp"
    app:layout_constraintTop_toBottomOf="@id/barrierMyContacts"
    />

</androidx.constraintlayout.widget.ConstraintLayout>